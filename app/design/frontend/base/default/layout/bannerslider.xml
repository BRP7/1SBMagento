<?xml version="1.0"?>
<layout version="0.1.0">
    <banner_master>
        <reference name="content">
            <action method="setTemplate">
                <template>bannerslider/view.phtml</template>
            </action>
            <block type="bannerslider/bannerslider" name="bannerslider"
                template="bannerslider/bannerslider.phtml">
                <action method="setDisplay">
                    <display>1</display>
                </action>
            </block>
        </reference>
    </banner_master>

    <!-- Reference the banner_master block within the footer -->
    <catalog_category_default>
        <reference name="footer">
            <block type="core/text_list" name="banner_master" as="banner_master" translate="label">
                <action method="setBlockName"><name>bannerslider</name></action>
                <!-- Add debug message block -->
                <block type="core/text" name="debug_message">
                    <action method="setText"><text>Debug Message</text></action>
                </block>
            </block>
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <reference name="footer">
            <block type="core/text_list" name="banner_master" as="banner_master" translate="label">
                <action method="setBlockName"><name>bannerslider</name></action>
                <!-- Add debug message block -->
                <block type="core/text" name="debug_message">
                    <action method="setText"><text>Debug Message</text></action>
                </block>
            </block>
        </reference>
    </catalog_category_layered>

    <cms_index_index>
        <update handle="banner_master" />
        <reference name="bannerslider">
            <action method="setDisplay">
                <display>0</display> 
            </action>
        </reference>
    </cms_index_index>
</layout>
