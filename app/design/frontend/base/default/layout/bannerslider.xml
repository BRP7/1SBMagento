<?xml version="1.0"?>
<layout version="0.1.0">

	<!-- Define banner_master handle -->

	<banner_master>
		<reference name="content">
			<action method="setTemplate">
				<template>bannerslider/view.phtml</template>
			</action>
			<block type="bannerslider/bannerslider" name="bannerslider"
				template="bannerslider/bannerslider.phtml">
				<action method="setDisplay">
					<display>1</display>
				</action>
			</block>
		</reference>
	</banner_master>


	<!-- Use banner_master handle with customizations
	catalog_product_view -> reference ->upsell_product ->inside that define block ->upsell ki phtml me getchildhtml ya to template change karna padega bannerslider.xml bannerslider/catalog/view.phtml ->copy all code
	-->
	<catalog_category_default> 
		<update handle="banner_master" />
		<!-- <reference name="category.products">
			<action method="setDisplay">
				<display>1</display>
			</action>
		</reference> -->
	</catalog_category_default>

	<catalog_category_layered>
		<update handle="banner_master" />
		<!-- <reference name="category.products">
			<action method="setDisplay">
				<display>1</display>
			</action>
		</reference> -->
	</catalog_category_layered>

	<cms_index_index>
		<update handle="banner_master" />
		<reference name="bannerslider">
			<action method="setDisplay">
				<display>0</display>
			</action>
			<action method="addJS">
				<display>0</display>
			</action>
		</reference>
	</cms_index_index>

</layout>