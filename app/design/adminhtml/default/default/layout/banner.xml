<?xml version="1.0"?>
<layout version="0.1.0">
    <adminhtml_banner_index>
        <reference name="content">
            <block type="ccc_banner/adminhtml_banner" name="banner" template="banner/grid/container.phtml">
                
            </block>
        </reference>
        <reference name="head">
            <action method="addJs">
                <script>banner/banner1.js</script>
            </action>
        </reference>
    </adminhtml_banner_index>

    <adminhtml_banner_new>
        <update handle="adminhtml_banner_edit" />
    </adminhtml_banner_new>

    <adminhtml_banner_edit>
        <update handle="editor" />
        <reference name="content">
            <block type="ccc_banner/adminhtml_banner_edit" name="ccc_banner_edit"></block>
        </reference>
    </adminhtml_banner_edit>

    <adminhtml_widget_grid>
        <remove name="adminhtml.widget.grid" /> <!-- Remove the default widget grid block -->
        <reference name="content">
            <block type="ccc_banner/adminhtml_grid" name="adminhtml.banner.grid" as="banner_grid" template="ccc/banner/grid.phtml" />
        </reference>
    </adminhtml_widget_grid>

</layout>