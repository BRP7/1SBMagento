<config>
    <menu>
        <ccc_banner translate="title" module="banner">
            <title>Banner</title>
            <sort_order>100</sort_order>
            <children>
                <index translate="title" module="banner">
                    <title>Manage Banners</title>
                    <action>adminhtml/banner/index</action>
                    <sort_order>10</sort_order>
                    <resource>ccc_banner/index</resource> <!-- Associate with ACL resource-->
                </index>
            </children>
        </ccc_banner>
    </menu>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <banner translate="title" module="banner"> 
                                    </banner>
                                </children>							
                            </config>
                        </children>
                    </system>
                    <ccc_banner translate="title" module="banner">
                        <title>Banner</title>
                        <sort_order>70</sort_order>
                        <children>
                            <index translate="title">
                                <title>Show Banner</title>
                                <sort_order>0</sort_order>
                            </index>
                            <new translate="title">
                                <title>New Banner</title>
                                <sort_order>0</sort_order>
                            </new>
                            <edit translate="title">
                                <title>Edit Banner</title>
                                <sort_order>0</sort_order>
                            </edit>
                            <delete translate="title">
                                <title>Delete Page</title>
                                <sort_order>10</sort_order>
                            </delete>
                            <columns translate="title">
                                <title>Banner Columns</title>
                                <children>
                                    <id translate="title">
                                        <title>Banner Id</title>
                                    </id>
                                    <name translate="title">
                                        <title>Banner Name</title>
                                    </name>
                                    <image translate="title">
                                        <title>Banner Image</title>
                                    </image>
                                    <status translate="title">
                                        <title>Banner Status</title>
                                    </status>
                                    <showon translate="title">
                                        <title>Banner Showon</title>
                                    </showon>
                                </children>
                            </columns>
                            <rows translate="title">
                                <title>Banner Columns</title>
                                <children>
                                    <showall translate="title">
                                        <title>Show All</title>
                                    </showall>
                                    
                                </children>
         
                            </rows>
                        </children>
                    </ccc_banner>
                </children>
            </admin>
        </resources>
    </acl>
</config>