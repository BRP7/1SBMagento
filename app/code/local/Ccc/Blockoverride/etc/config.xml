<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Blockoverride>
            <version>1.0.0</version>
        </Ccc_Blockoverride>
    </modules>
    <global>
        <blocks>
            <catalog>
                <rewrite>
                    <product_list>Ccc_Blockoverride_Block_Product_List</product_list>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <catalog>
                <rewrite>
                    <product>Ccc_Blockoverride_Model_Product</product>
                </rewrite>
            </catalog>
        </models>
    </global>
    <frontend>
        <routers>
            <catalog>
                <args>
                    <modules>
                        <Ccc_Blockoverride before="Mage_Catalog">Ccc_Blockoverride</Ccc_Blockoverride>
                    </modules>
                </args>
            </catalog>
        </routers>
    </frontend>
</config>









